<div class="panel-body">
  <!-- <form role="form" class="form-horizontal"> -->
  <%= form_for (@user), html: {class:"form-horizontal"} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.label :name, class:"col-md-2 control-label" %>
      <div class="col-md-8">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-user"></i>
          </span>
          <%= f.text_field :name, class:"form-control1", placeholder: "Full Name" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email_address, class: "col-md-2 control-label" %>
      <div class="col-md-8">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-envelope-o"></i>
          </span>
          <%= f.email_field :email, class: "form-control1", placeholder: "Email Address" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: "col-md-2 control-label" %>
      <div class="col-md-8">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-key"></i>
          </span>
          <%= f.password_field :password, class:"form-control1", id: "exampleInputPassword1", placeholder: "Password" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :confirmation_password, class: "col-md-2 control-label" %>
      <div class="col-md-8">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-key"></i>
          </span>
          <%= f.password_field :password_confirmation, class:"form-control1", id: "exampleInputPassword1", placeholder: "Confirmation Password" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :avatar_upload, class: "col-md-2 control-label" %>
      <div class="col-md-8">
        <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-file"></i>
            </span>
            <%= f.file_field :avatar, class: "form-control", id: "exampleInputFile" %>
            <!-- <input class="form-control" type="file" id="exampleInputFile"> -->
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <%= f.submit yield(:button_text), class:"btn-primary btn", style: "border-radius:5px;" %>
          <!-- <button class="btn-primary btn" style="border-radius:5px;">Submit</button> -->
          <%= f.submit "Cancel", class:"btn-danger btn", style: "border-radius:5px;", type: "reset" %>
          <!-- <button class="btn-danger btn" style="border-radius:5px;">Cancel</button> -->
        </div>
      </div>
     </div>
  <% end %>
  <!-- </form> -->
</div>

