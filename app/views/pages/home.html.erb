<% provide(:descriptions,'Documentation, Tutorial and Problem Solving MalmiNgoprek' ) %>
<% provide(:keywords, 'documentation, tutorial linux, problem solved linux, documentation linux, tutorial, problem solved, geekid, malmingoprek') %>
<% provide(:author, 'GeekID') %>
<%= render 'layouts/blog/banner' %>
<div class="main-content">
  <div class="container">
       <div class="mag-inner">
       <div class="col-md-8 mag-innert-left">
         <!--//latest-articles-->
         <div class="header_title">
           <h3 class="tittle"><i class="glyphicon glyphicon-file"></i>latest Articles</h3>
         </div>
         <div class="latest-articles">
             <div class="world-news-grids">
               <% @post.each do |posts| %>
               <div class="world-news-grid">
                 <div style="text-transform: uppercase; font-size: 18px;"><%= link_to posts.title, content_path(posts) , class: "wd" %></div>
                 <div style="color:#ababab; line-height: 15px; font-size: 12px;">Published at <%= posts.created_at.to_date.strftime('%a, %e %b %Y' ) %> |  Author <%= posts.user.name %></div>
                 <!-- Show Featured Image Post -->
                 <% if posts.images.present? %>
                    <p><%= image_tag posts.images %></p>
                 <% else %>
                    <p><%= image_tag 'default.png' %></p>
                 <% end %>
                 <!-- End Featured Image Post -->

                 <p><%= raw(posts.descriptions) %></p>

                 <!-- <p style=""><%= raw(posts.content) %></p> -->
                 <%= link_to "Read More", content_path(posts) , class: "read" %>
                 <!-- <a class="read" href="single.html">Read More</a> -->
               </div>
              <div class="clearfix"></div>
              <% end %>

            </div>
            <div class="pagination">
              <%= will_paginate @post, renderer: BootstrapPagination::Rails %>
            </div>

         </div>
            <!--//articles-->
       </div>
         <%= render "layouts/blog/sidebar" %>
         <div class="clearfix"></div>
       </div>
      </div>
   </div>
