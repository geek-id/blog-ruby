<div class="banner two">
   <div class="container">
         <h2 class="inner-tittle">Read | Practice | Problem Solved</h2>
   </div>
</div>

<div class="main-content">
  <div class="container">
       <div class="mag-inner">
         <div class="col-md-8 mag-innert-left">

            <div class="banner-bottom-left-grids">
              <div class="header_title">
                <h3 class="tittle"><i class="glyphicon glyphicon-file"></i>Tags <%= @tag.name %></h3>
              </div>
                <div class="single-left-grid">

                  <div class="world-news-grid">
                    <% @post.each do |post| %>
                    <div style="text-transform: uppercase; font-size: 18px;"><%= link_to post.title, content_path(@post) , class: "wd" %></div>
                    <div style="color:#ababab; line-height: 15px; font-size: 12px;">Published at <%= post.created_at.to_date.strftime('%a, %e %b %Y' ) %> |  Author <%= post.user.name %></div>

                     <% if post.images.present? %>
                        <p><%= image_tag post.images %></p>
                     <% else %>
                        <p><%= image_tag 'default.png' %></p>
                     <% end %>
                        <p><%= raw(post.descriptions) %></p>

                     <%= link_to "Read More", content_path(post) , class: "read" %>
                     <% end %>
                 </div>
              </div>
          </div>
        </div>
        <%= render "layouts/blog/sidebar" %>
         <div class="clearfix"></div>
       </div>
        <!--//end-mag-inner-->
      </div>
   </div>
